{
  "private": true,
  "type": "module",
  "engines": {
    "node": "~12"
  },
  "scripts": {
    "postinstall": "cd front && yarn",
    "front": "cd front && yarn start",
    "server": "nodemon --experimental-modules --es-module-specifier-resolution=node server.js",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn front\"",
    "start": "node --experimental-modules --es-module-specifier-resolution=node server.js",
    "heroku-postbuild": "cd front && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "dependencies": {
    "express": "^4.17.1",
    "puppeteer": "^3.0.0",
    "rimraf": "^3.0.2",
    "uuid": "^7.0.3"
  },
  "devDependencies": {
    "concurrently": "^5.1.0",
    "eslint": "^6.8.0",
    "nodemon": "^2.0.3"
  }
}
